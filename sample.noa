// Recursion is also supported
fun rec() {
    // rec();
    return "this will appear";
    println("this will not appear");
}
println(rec());


fun closure() {
    var count = 0;

    fun counter() {
        count = count +1;
        return count;

    }
    return counter;
}

var counter = closure();

println(counter()); // 1
println(counter()); // 2
println(counter()); // 3

