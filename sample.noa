// Create OOP like objects
fun create_actor() {
    var a = {
        "health": 100,
    };

    fun take_damage(amount) {
        a["health"] = a["health"] - amount;
    }

    a["take_damage"] = take_damage;

    return a;
}

var actor1 = create_actor();
println(actor1);
actor1["take_damage"](10);
println(actor1);
println(create_actor()["health"]);

